@model Event_Management_system.Models.Sector_Investor

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hotel Information</h5>

                <!-- Hotel Information -->
                <form asp-action="Create">
                    <div class="row mt-3">
                        <div class="col-sm-4">
                            <label asp-for="Investor_Id" class="control-label"></label>
                            <select asp-for="Investor_Id" class="form-control" asp-items="ViewBag.Investor_Id"></select>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="FromDate" class="control-label"></label>
                            <input asp-for="FromDate" class="form-control" />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="ToDate" class="control-label"></label>
                            <input asp-for="ToDate" class="form-control" />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm">
                            <label asp-for="Sector_Id" class="control-label"></label>
                            <select asp-for="Sector_Id" class="form-control" asp-items="ViewBag.Sector_Id"></select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <input type="submit" value="Create" class="btn btn-outline-primary btn-sm" />
                        </div>
                        <div class="col-sm-2">
                            <a asp-action="Index" class="btn btn-outline-success  btn-sm"> Back to List</a>
                        </div>
                    </div>


                    <div>
                    </div>

                </form><!-- End General Form Elements -->

            </div>
        </div>


    </section>

</main><!-- End #main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
