@model Event_Management_system.Models.Hotel


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hotel Information</h5>

                <form asp-action="Edit">
                    <div class="row mt-3">
                        <div class="col-sm-4">
                            <input type="hidden" asp-for="Hotel_Id" />
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                                <label asp-for="Country" class="control-label"></label>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-12">

                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <a asp-action="Index" class="btn btn-outline-success  btn-sm"> Back to List</a>

                        </div>
                        <div class="col-sm-2">
                            <input type="submit" value="Edit" class="btn btn-outline-primary  btn-sm" />

                        </div>
                    </div>


                    <div>
                    </div>

                </form><!-- End General Form Elements -->

            </div>
        </div>


    </section>

</main><!-- End #main -->