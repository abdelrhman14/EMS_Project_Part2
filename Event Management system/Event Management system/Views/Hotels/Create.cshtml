@model Event_Management_system.Models.Hotel


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        @if (TempData["CreateMessage"] != null)
        {
            <div class="alert alert-success">

                <strong>Success ! </strong>@TempData["CreateMessage"]
            </div>
        }
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hotel Information</h5>

                <!-- Hotel Information -->
                <form asp-action="Create">
                  
                    <div class="row mt-3">
                        <div class="col-sm-4">
                            <label asp-for="Name"   class="control-label"></label>
                            <input asp-for="Name" placeholder="Hotel Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Country"  class="control-label"></label>
                            <input asp-for="Country" placeholder="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="City"  placeholder="Country" class="control-label"></label>
                            <input asp-for="City" placeholder="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" placeholder="Description" class="form-control" /></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <a asp-action="Index" class="btn btn-outline-success  btn-sm"> Back to List</a>
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" value="Add New Hotel" class="btn btn-outline-primary btn-sm" />

                        </div>
                    </div>


                    <div>
                    </div>

                </form><!-- End General Form Elements -->

            </div>
        </div>


    </section>

</main><!-- End #main -->




