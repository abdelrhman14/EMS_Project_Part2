@using Event_Management_system.Models

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hotel Information</h5>
                @using (Html.BeginForm(FormMethod.Get))
                {

                    <div class="row mt-3">
                        <div class="col-sm-3">
                            <label for="exampleFormControlInput1">From Date</label>
                            <input type="search" class="form-control" data-live-search="true" id="start" name="start" placeholder="From Date">

                        </div>
                        <div class="col-sm">
                            <label for="exampleFormControlInput1">End Date</label>
                            <input type="search" class="form-control" data-live-search="true" id="end" name="end" placeholder="To Date">

                        </div>
                    </div>



                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <input type="submit" value="Search" class="btn btn-outline-primary" />
                        </div>

                    </div>


                    <div>
                    </div>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    All Available Presenters
                </h5>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Presenter</th>
                            <th scope="col">Sector</th>
                            <th scope="col">From Date</th>
                            <th scope="col">To Date</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Room item in Model)
                        {
                            <tr>
                                <td>
                                    #
                                </td>
                            
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDate)

                                <td>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main><!-- End #main -->
