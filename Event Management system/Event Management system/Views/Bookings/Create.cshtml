@model Event_Management_system.Models.Booking

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <form asp-action="Create">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Booking Information</h5>

                    <div class="row mt-3">
                        <div class="col-sm-3">
                            <label asp-for="Investor_Id" class="control-label"></label>
                            <select asp-for="Investor_Id" class="form-control" asp-items="ViewBag.Investor_Id"></select>

                        </div>

                        <div class="col-sm-3">
                            <label asp-for="Presenter_Id" class="control-label"></label>
                            <select asp-for="Presenter_Id" class="form-control" asp-items="ViewBag.Presenter_Id"></select>
                        </div>
                        <div class="col-sm-3">
                            <label asp-for="Room_Id" class="control-label"></label>
                            <select asp-for="Room_Id" class="form-control" asp-items="ViewBag.Room_Id"></select>

                        </div>
         
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <input type="submit" value="Booking" class="btn btn-outline-primary" />
                        </div>

                    </div>

                    <div>
                    </div>

                </div>
            </div>

        </form>


    </section>

</main><!-- End #main -->

