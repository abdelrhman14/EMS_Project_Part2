@model Event_Management_system.Models.Booking

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Are you sure you want to delete this?  </h5>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Investor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Investor.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Presenter)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Presenter.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Room)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Room.Room_Id)
                    </dd>
                </dl>


                <form asp-action="Delete">
                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <a asp-action="Index" class="btn btn-outline-success  btn-sm">Back to List</a>

                        </div>
                        <div class="col-sm-2">
                            <input type="hidden" asp-for="Booking_Id" />
                            <input type="submit" value="Delete" class="btn btn-outline-danger  btn-sm" />
                        </div>
                    </div>
                </form>

            </div>

        </div>

    </section>

</main><!-- End #main -->
